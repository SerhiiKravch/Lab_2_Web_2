<!-- Модальне вікно -->
<div class="modal fade" id="modal_performers" data-bs-backdrop="static" data-bs-keyboard="true" tabindex="-1"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-dark">

      <!-- Заголовок модального вікна -->
      <div class="modal-header border-secondary">
        <div class="d-flex flex-column">
          <span class="fs-3 lh-1" id="performer_title">#Title</span>
        </div>
        <button type="button" class="btn-close bg-primary" data-bs-dismiss="modal"></button>
      </div>

      <!-- Тіло модального вікна -->
      <div class="modal-body">
        <form>

          <span class="fs-5">Назва</span>
          <input class="form-control fs-5 bg-dark text-light border-primary mb-2" id="performer_name" type="text"
            placeholder="Назва">

          <div class="row gx-3 mb-2">
            <div class="col-12 col-sm-6">

              <span class="fs-5">Кількість працівників</span>
              <input class="form-control fs-5 bg-dark text-light border-primary" id="performer_count_workers" type="number"
                placeholder="Кількість працівників">
            </div>

            <div class="col-12 mb-2 d-block d-sm-none"></div>
            <div class="col-12 col-sm-6">

              <span class="fs-5">Досвід</span>
              <input class="form-control fs-5 bg-dark text-light border-primary" id="performer_experience" type="number"
                placeholder="Досвід">

            </div>
          </div>

        </form>
      </div>

      <!-- Кнопки модального вікна -->
      <div class="modal-footer border-secondary">
        <button class="btn btn-outline-primary" id="performer_yes" data-bs-dismiss="modal"
          onclick="modal_add_performers()">Додати</button>
        <button class="btn btn-outline-secondary" id="performer_no" data-bs-dismiss="modal">Відміна</button>
      </div>
    </div>
  </div>
</div>