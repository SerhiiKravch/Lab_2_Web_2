<!-- Модальне вікно -->
<div class="modal fade" id="modal_customers" data-bs-backdrop="static" data-bs-keyboard="true" tabindex="-1"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-dark">

      <!-- Заголовок модального вікна -->
      <div class="modal-header border-secondary">
        <div class="d-flex flex-column">
          <span class="fs-3 lh-1" id="customer_title">#Title</span>
        </div>
        <button type="button" class="btn-close bg-primary" data-bs-dismiss="modal"></button>
      </div>

      <!-- Тіло модального вікна -->
      <div class="modal-body">
        <form>

          <!-- Назва -->
          <span class="fs-5">Назва</span>
          <input class="form-control fs-5 bg-dark text-light border-primary mb-2" id="customer_name" type="text"
            placeholder="Назва">

              <!-- Бюджет -->
              <span class="fs-5">Бюджет</span>
              <input class="form-control fs-5 bg-dark text-light border-primary" id="customer_budget" type="number"
                placeholder="Бюджет">
          <div class="row gx-3">
            <div class="col-12 col-sm-2">

            </div>

            <div class="col-12 mb-2 d-block d-sm-none"></div>
            <div class="col-12 col-sm-10">

              

            </div>
          </div>
        </form>
      </div>

      <!-- Кнопки модального вікна -->
      <div class="modal-footer border-secondary">
        <button class="btn btn-outline-primary" id="customer_yes" data-bs-dismiss="modal"
          onclick="modal_add_customers()">#Yes</button>
        <button class="btn btn-outline-secondary" id="customer_no" data-bs-dismiss="modal">Відміна</button>
      </div>
    </div>
  </div>
</div>